/*
 * https://github.com/BowlerHatLLC/vscode-as3mxml/wiki/asconfig.json#library-path
 */
 {
    "config": "royale",
    "type": "lib",
    "compilerOptions": {
        "debug": true,
        "targets": [
            "JSRoyale"
        ],
        "namespace": [
            {
                "uri": "library://ns.apache.org/royale/community/jscalendar",
                "manifest": "src/main/resources/jscalendar-manifest.xml"
            },
            {
                "uri": "library://ns.apache.org/royale/community",
                "manifest": "../royalecomponents/src/main/resources/components-manifest.xml"
            }
        ],
        "define": [
            {
                "name": "COMPILE::JS",
                "value": true
            },
            {
                "name": "COMPILE::SWF",
                "value": false
            }
        ],
        "source-path": [
            "src/main/royale/",
            "../royalecomponents/src/main/royale/"
        ],
        "include-classes": [
            "JSCALENDARClasses"
        ],
        "include-sources": [
            "src/main/royale"
        ],
        "library-path": [
            "${royalelib}/libs/MXRoyale.swc"
        ],
        "js-library-path": [
            "${royalelib}/js/libs/MXRoyaleJS.swc"
        ],
        "source-map": true,
        "remove-circulars": true,
        "output": "target/RoyaleJsCalendar.swc"
    }
}
