<j:ListItemRenderer
    xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:j="library://ns.apache.org/royale/jewel" 
    xmlns:js="library://ns.apache.org/royale/basic"
      xmlns:html="library://ns.apache.org/royale/html" width="110" >

    <fx:Script>
        <![CDATA[
            import org.apache.royale.community.vos.ContextMenuVO;
            import org.apache.royale.events.Event;

            [Bindable("dataChange")]
            public function get ContextMenu():ContextMenuVO
            {
                return data as ContextMenuVO;
            }
		
		  public function handleClick():void
		  {
        if(ContextMenu.click != null)
			    dispatchEvent(new Event(ContextMenu.click));

		  }
  
		]]>
    </fx:Script>

    <fx:Style>
		


	</fx:Style>

      <j:beads>
        <js:ItemRendererDataBinding />
        <j:HorizontalLayout gap="3" itemsVerticalAlign="itemsCenter"/>
    </j:beads>

	
     <j:Image localId="img1" width="20" src="{ContextMenu.icon!= null ? ContextMenu.icon : null;}"/>
     <html:Span localId="span1" width="80"  text="{ContextMenu.label}" click="handleClick();" />

</j:ListItemRenderer>

