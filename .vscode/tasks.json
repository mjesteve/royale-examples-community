{
    //https://code.visualstudio.com/docs/editor/variables-reference
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Maven",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "install",
                "-DskipTests"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build with Maven - Droyalelib - Servidor CI",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "install",
                "-Droyalelib=${env:ROYALE_HOME}\\frameworks",
                "-DskipTests"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build with Maven - Droyalelib",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "install",
                "-Droyalelib=${env:ROYALE_LIB_DEBUG}",
                //"-Droyalelib=D:\Develop_Royale\Projects\Royale-SDK\royale-asjs-fork\frameworks",
                "-DskipTests"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build with Maven - Perfil LOCAL - not inet",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "install",
                "-DskipTests",
                "-Plocal"
            ],
            "problemMatcher": []
        },
        {
            "label": "echo - ${project.basedir} from root",
            "type": "shell",
            "command": "echo ${project.basedir}",
            "problemMatcher": [
                "$royale"
            ]
        }
    ]
}